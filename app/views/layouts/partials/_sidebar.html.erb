<!-- Mobile header with toggle button -->
<header class="mobile-header d-md-none">
  <button class="btn-toggle-sidebar" id="toggleSidebar" aria-label="Abrir menu">
    <i class="fas fa-bars"></i>
  </button>
  <div class="mobile-actions d-flex align-items-center">
    <div class="avatar-sm rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 30px !important; height: 30px !important;">
      <i class="fas fa-user text-primary"></i>
    </div>
  </div>
</header>

<aside class="app-sidebar" id="sidebar">
  <div class="sidebar-container">
    <!-- Mobile header inside sidebar -->
    <div class="mobile-sidebar-header d-md-none">
      <div class="d-flex align-items-center justify-content-between p-3">
        <div class="d-flex align-items-center">
          <div class="logo-icon me-2 text-primary">
            <i class="fas fa-flask"></i>
          </div>
          <h5 class="mb-0 text-white">Quimicenter</h5>
        </div>
        <button class="btn-close-sidebar" id="closeSidebar" aria-label="Fechar menu">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="divider"></div>
    </div>

    <!-- Search bar at top -->
    <div class="search-container p-3">
      <div class="input-group">
        <span class="input-group-text bg-transparent border-end-0 text-light">
          <i class="fas fa-search"></i>
        </span>
        <input type="text" class="form-control bg-transparent border-start-0 text-light" placeholder="Pesquisar..." aria-label="Pesquisar">
      </div>
    </div>
    <div class="divider"></div>

    <!-- Navigation menu with improved visual hierarchy -->
    <div class="sidebar-menu">
      <div class="menu-section">
        <p class="menu-label px-3 mb-2 text-uppercase"><small>Principal</small></p>
        <ul class="nav flex-column">
          <!-- Home button -->
          <li class="nav-item">
            <a class="nav-link sidebar-link" href="/">
              <div class="sidebar-icon-container">
                <i class="fas fa-home"></i>
              </div>
              <span class="menu-text">Home</span>
            </a>
          </li>

        </ul>
      </div>

      <div class="menu-section mt-2">
        <p class="menu-label px-3 mb-2 text-uppercase"><small>Gerenciamento</small></p>
        <ul class="nav flex-column">
          <!-- Seção de Pedidos -->
          <li class="nav-item">
            <a class="nav-link sidebar-link collapsed" data-bs-toggle="collapse" href="#collase-orders" role="button" aria-expanded="false" aria-controls="collase-orders">
              <div class="d-flex align-items-center justify-content-between w-100">
                <div class="d-flex align-items-center">
                  <div class="sidebar-icon-container">
                    <i class="fas fa-shopping-cart"></i>
                  </div>
                  <span class="menu-text">Pedidos</span>
                </div>
                <i class="fas fa-chevron-down menu-arrow"></i>
              </div>
            </a>
            <div class="collapse submenu" id="collase-orders">
              <ul class="nav flex-column">
                <!-- Pedidos de Venda -->
                <li class="nav-item">
                  <%= link_to sales_orders_path, class: 'nav-link submenu-link' do %>
                    <i class="fas fa-list-ul"></i>
                    <span class="menu-text">Pedidos de Venda</span>
                  <% end %>
                </li>
                <!-- Fila de criação no Bling -->
                <li class="nav-item">
                  <%= link_to sale_order_items_path(status: 'pending'), class: 'nav-link submenu-link' do %>
                    <i class="fas fa-tasks"></i>
                    <span class="menu-text">Fila de criação no Bling</span>
                  <% end %>
                </li>
              </ul>
            </div>
          </li>

      <div class="menu-section mt-2">
        <p class="menu-label px-3 mb-2 text-uppercase"><small>Sistema</small></p>
        <ul class="nav flex-column">
          <!-- Configurações de Sincronização -->
          <li class="nav-item">
            <%= link_to sync_configuration_path, class: 'nav-link sidebar-link' do %>
              <div class="sidebar-icon-container">
                <i class="fas fa-cogs"></i>
              </div>
              <span class="menu-text">Configurações Sync</span>
            <% end %>
          </li>

          <!-- Histórico de Tentativas dropdown -->
          <li class="nav-item">
            <a class="nav-link sidebar-link collapsed" data-bs-toggle="collapse" href="#collase-attempts" role="button" aria-expanded="false" aria-controls="collase-attempts">
              <div class="d-flex align-items-center justify-content-between w-100">
                <div class="d-flex align-items-center">
                  <div class="sidebar-icon-container">
                    <i class="fas fa-hourglass-half"></i>
                  </div>
                  <span class="menu-text">Histórico</span>
                </div>
                <i class="fas fa-chevron-down menu-arrow"></i>
              </div>
            </a>
            <div class="collapse submenu" id="collase-attempts">
              <ul class="nav flex-column">
                <li class="nav-item">
                  <%= link_to attempts_path, class: 'nav-link submenu-link' do %>
                    <i class="fas fa-file-invoice"></i>
                    <span class="menu-text">Integração pedidos</span>
                  <% end %>
                </li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- User profile section above footer -->
    <div class="user-profile mt-auto p-3">
      <div class="d-flex align-items-center">
        <div class="avatar-container me-3">
          <div class="avatar rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 38px !important; height: 38px !important;">
            <i class="fas fa-user text-primary"></i>
          </div>
        </div>
        <div class="user-info">
          <h6 class="mb-0 text-white">Usuário</h6>
          <small class="text-light opacity-75">Administrador</small>
        </div>
        <div class="ms-auto">
          <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-outline-light rounded-circle', style: 'width: 38px !important; height: 38px !important;' do %>
            <i class="fas fa-sign-out-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
</aside>

<div class="sidebar-overlay" id="sidebarOverlay"></div>

<style>
:root {
  --sidebar-bg: #1e3a5f;
  --sidebar-hover: rgba(255, 255, 255, 0.1);
  --sidebar-active: rgba(255, 255, 255, 0.15);
  --sidebar-text: rgba(255, 255, 255, 0.85);
  --sidebar-muted: rgba(255, 255, 255, 0.6);
  --sidebar-border: rgba(255, 255, 255, 0.1);
  --sidebar-icon-bg: rgba(255, 255, 255, 0.1);
  --sidebar-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
  --mewtda-color: #4e92f8;
}

.app-sidebar {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 260px;
  background-color: var(--sidebar-bg);
  background-image: linear-gradient(to bottom, #1e3a5f, #1a325a);
  color: #fff;
  z-index: 1030;
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease;
  box-shadow: var(--sidebar-shadow);
}

.sidebar-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto;
  scrollbar-width: thin;
  scrollbar-color: var(--sidebar-border) transparent;
}

.sidebar-container::-webkit-scrollbar {
  width: 5px;
}

.sidebar-container::-webkit-scrollbar-track {
  background: transparent;
}

.sidebar-container::-webkit-scrollbar-thumb {
  background-color: var(--sidebar-border);
  border-radius: 10px;
}

/* Mobile sidebar header */
.mobile-sidebar-header {
  background-color: rgba(0, 0, 0, 0.1);
}

.mobile-sidebar-header .logo-icon {
  font-size: 1.2rem;
}

/* Search styling */
.search-container .form-control {
  border-color: var(--sidebar-border);
}

.search-container .form-control::placeholder {
  color: var(--sidebar-muted);
}

.search-container .input-group-text {
  border-color: var(--sidebar-border);
}

/* Menu section styling */
.menu-section {
  margin-bottom: 0.5rem;
}

.menu-label {
  color: var(--sidebar-muted);
  font-size: 0.7rem;
  font-weight: 600;
  letter-spacing: 1px;
}

/* Sidebar link styling */
.sidebar-link {
  display: flex;
  align-items: center;
  padding: 0.65rem 1.25rem;
  color: var(--sidebar-text) !important;
  transition: all 0.2s ease;
  border-left: 3px solid transparent;
  margin: 2px 0;
}

.sidebar-link:hover,
.sidebar-link:focus {
  color: #fff !important;
  background-color: var(--sidebar-hover);
  border-left-color: var(--mewtda-color);
}

.sidebar-link[aria-expanded="true"] {
  background-color: var(--sidebar-active);
  border-left-color: var(--mewtda-color);
}

/* Icon container styling */
.sidebar-icon-container {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--sidebar-icon-bg);
  border-radius: 8px;
  margin-right: 12px;
  transition: all 0.2s ease;
}

.sidebar-link:hover .sidebar-icon-container {
  background-color: rgba(255, 255, 255, 0.2);
}

.menu-text {
  font-weight: 500;
}

.menu-arrow {
  transition: transform 0.2s;
  font-size: 0.7rem;
}

.sidebar-link[aria-expanded="true"] .menu-arrow {
  transform: rotate(180deg);
}

/* Submenu styling */
.submenu {
  padding-left: 1rem;
  background-color: rgba(0, 0, 0, 0.15);
  border-radius: 0 0 8px 8px;
  margin: 0 0.5rem 0.5rem 0.5rem;
}

.submenu-link {
  padding: 0.5rem 1rem !important;
  color: var(--sidebar-muted) !important;
  border-left: 2px solid transparent;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
}

.submenu-link:hover {
  color: #fff !important;
  border-left-color: var(--mewtda-color);
}

.submenu-link i {
  width: 20px;
  margin-right: 8px;
  font-size: 0.85rem;
}

/* Divider styling */
.divider {
  height: 1px;
  margin: 0.25rem 1rem;
  background-color: var(--sidebar-border);
}

/* User profile styling */
.user-profile {
  border-top: 1px solid var(--sidebar-border);
}

.avatar {
  width: 38px;
  height: 38px;
}

.avatar-sm {
  width: 32px;
  height: 32px;
}

/* Footer styling */
.sidebar-footer {
  padding: 0;
  font-size: 0.8rem;
  background-color: rgba(0, 0, 0, 0.15);
}

.logo-icon {
  font-size: 1.2rem;
}

/* Mewtda signature styling */
.mewtda-signature {
  margin-top: 8px;
  padding-top: 8px;
  border-top: 1px dashed var(--sidebar-border);
}

.mewtda-signature .text-primary {
  color: var(--mewtda-color) !important;
}

.mewtda-signature i {
  font-size: 0.9rem;
}

/* Mobile header styling */
.mobile-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem 1rem;
  background-color: var(--sidebar-bg);
  border-bottom: 1px solid var(--sidebar-border);
  position: sticky;
  top: 0;
  z-index: 1020;
  color: white;
}

.btn-toggle-sidebar {
  background: none;
  border: none;
  color: white;
  font-size: 1.25rem;
  cursor: pointer;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.btn-toggle-sidebar:hover {
  background-color: var(--sidebar-hover);
}

.btn-close-sidebar {
  background: none;
  border: none;
  color: #fff;
  font-size: 1rem;
  cursor: pointer;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.btn-close-sidebar:hover {
  background-color: var(--sidebar-hover);
}

/* Overlay styling */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1025;
  display: none;
  backdrop-filter: blur(2px);
  transition: opacity 0.3s;
}

/* Responsive styling */
@media (max-width: 767.98px) {
  .app-sidebar {
    transform: translateX(-100%);
    width: 100%;
    max-width: 300px;
  }

  .app-sidebar.show {
    transform: translateX(0);
    box-shadow: var(--sidebar-shadow);
  }

  .sidebar-link, .submenu-link {
    padding: 0.8rem 1.25rem !important;
  }

  .sidebar-icon-container {
    width: 36px;
    height: 36px;
  }

  .sidebar-overlay.show {
    display: block;
  }

  .app-main {
    margin-left: 0;
    width: 100%;
  }

  /* Improved touch targets for mobile */
  .menu-arrow {
    font-size: 0.8rem;
    padding: 8px;
    margin: -8px;
  }
}

@media (min-width: 768px) {
  .app-main {
    margin-left: 260px;
    width: calc(100% - 260px);
  }
}

/* Animation for mobile sidebar */
@keyframes slideIn {
  from { transform: translateX(-100%); }
  to { transform: translateX(0); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.app-sidebar.show {
  animation: slideIn 0.3s ease forwards;
}

.sidebar-overlay.show {
  animation: fadeIn 0.3s ease forwards;
}
</style>

<script>
function initSidebar() {
  var toggleBtn = document.getElementById('toggleSidebar');
  var closeBtn = document.getElementById('closeSidebar');
  var sidebar = document.getElementById('sidebar');
  var overlay = document.getElementById('sidebarOverlay');

  if (toggleBtn) {
    toggleBtn.onclick = function() {
      if (sidebar) {
        sidebar.classList.add('show');
        if (overlay) overlay.classList.add('show');
        document.body.style.overflow = 'hidden';
      }
    };
  }

  if (closeBtn) {
    closeBtn.onclick = function() {
      if (sidebar) {
        sidebar.classList.remove('show');
        if (overlay) overlay.classList.remove('show');
        document.body.style.overflow = '';
      }
    };
  }

  if (overlay) {
    overlay.onclick = function() {
      if (sidebar) {
        sidebar.classList.remove('show');
        overlay.classList.remove('show');
        document.body.style.overflow = '';
      }
    };
  }

  // Handle touch swipe to close sidebar on mobile
  var touchStartX = 0;
  var touchEndX = 0;

  if (sidebar) {
    sidebar.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
    }, false);

    sidebar.addEventListener('touchend', function(e) {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, false);
  }

  function handleSwipe() {
    if (touchStartX - touchEndX > 70) { // Swipe left to close
      if (sidebar) {
        sidebar.classList.remove('show');
        if (overlay) overlay.classList.remove('show');
        document.body.style.overflow = '';
      }
    }
  }

  // Add version number to console
  console.log('Sidebar v1.0 - Made by mewtda');
}

document.addEventListener('DOMContentLoaded', initSidebar);

if (typeof Turbolinks !== 'undefined') {
  document.addEventListener('turbolinks:load', initSidebar);
}

if (document.readyState === 'complete' || document.readyState === 'interactive') {
  initSidebar();
}
</script>
