<div class="container-fluid mt-4 text-white">
  <div class="row mb-4 align-items-center">
    <div class="col-md-12">
      <div class="d-flex align-items-center">
        <i class="fas fa-shopping-cart fa-2x text-info me-3"></i>
        <div>
          <h1 class="h3 mb-1 text-white">Itens para Compra</h1>
          <p class="text-light mb-0">Gerencie itens para criar pedidos de compra</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-4 mb-3 mb-md-0">
      <div class="card bg-dark border-info shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <h6 class="text-info mb-1">Itens Selecionados</h6>
              <h2 class="mb-0 display-5 fw-bold text-white"><%= @checked_items_count %></h2>
              <p class="text-light mb-0 small">Itens marcados para compra</p>
            </div>
            <div class="rounded-circle bg-info bg-opacity-10 p-3">
              <i class="fas fa-check-circle fa-2x text-info"></i>
            </div>
          </div>
          <div class="progress mt-3 bg-dark border border-secondary">
            <div class="progress-bar bg-info" role="progressbar" 
                 style="width: <%= @total_items_count > 0 ? (@checked_items_count.to_f / @total_items_count * 100).to_i : 0 %>%" 
                 aria-valuenow="<%= @checked_items_count %>" aria-valuemin="0" aria-valuemax="<%= @total_items_count %>"></div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-3 mb-md-0">
      <div class="card bg-dark border-warning shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <h6 class="text-warning mb-1">Itens Ignorados</h6>
              <h2 class="mb-0 display-5 fw-bold text-white"><%= @ignored_items_count %></h2>
              <p class="text-light mb-0 small">Itens marcados para ignorar</p>
            </div>
            <div class="rounded-circle bg-warning bg-opacity-10 p-3">
              <i class="fas fa-ban fa-2x text-warning"></i>
            </div>
          </div>
          <div class="progress mt-3 bg-dark border border-secondary">
            <div class="progress-bar bg-warning" role="progressbar" 
                 style="width: <%= @total_items_count > 0 ? (@ignored_items_count.to_f / @total_items_count * 100).to_i : 0 %>%" 
                 aria-valuenow="<%= @ignored_items_count %>" aria-valuemin="0" aria-valuemax="<%= @total_items_count %>"></div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card bg-dark border-success shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <h6 class="text-success mb-1">Total de Itens</h6>
              <h2 class="mb-0 display-5 fw-bold text-white"><%= @total_items_count %></h2>
              <p class="text-light mb-0 small">Itens disponíveis para compra</p>
            </div>
            <div class="rounded-circle bg-success bg-opacity-10 p-3">
              <i class="fas fa-boxes fa-2x text-success"></i>
            </div>
          </div>
          <div class="d-flex justify-content-between mt-3 text-light small">
            <span>
              <i class="fas fa-check-circle text-info me-1"></i> <%= @total_items_count > 0 ? (@checked_items_count.to_f / @total_items_count * 100).to_i : 0 %>% selecionados
            </span>
            <span>
              <i class="fas fa-ban text-warning me-1"></i> <%= @total_items_count > 0 ? (@ignored_items_count.to_f / @total_items_count * 100).to_i : 0 %>% ignorados
            </span>
            <span>
              <i class="fas fa-question-circle text-muted me-1"></i> <%= @total_items_count > 0 ? (100 - (@checked_items_count.to_f + @ignored_items_count.to_f) / @total_items_count * 100).to_i : 0 %>% pendentes
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow mb-4 border-0 bg-dark border-secondary">
    <div class="card-header py-3 bg-dark border-secondary">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-info">
          <i class="fas fa-list-ol me-2"></i>Itens por Fornecedor
        </h6>
        <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
          <i class="fas fa-filter me-1"></i> Filtros <i class="fas fa-chevron-down ms-1" id="filterIcon"></i>
        </button>
      </div>
    </div>
    
    <div class="collapse" id="filterCollapse">
      <div class="card-body bg-dark border-secondary py-3">
        <div class="filter-container bg-dark">
          <div class="row g-3">
            <div class="col-md-12 mb-2">
              <div class="d-flex justify-content-between align-items-center">
                <h6 class="text-info mb-0"><i class="fas fa-filter me-2"></i>Filtros</h6>
                <button class="btn btn-sm btn-outline-secondary" type="button" id="clear-filters">
                  <i class="fas fa-times me-1"></i> Limpar Filtros
                </button>
              </div>
              <hr class="border-secondary my-2">
            </div>
            
            <div class="col-md-6">
              <div class="filter-group">
                <label for="date-filter" class="form-label text-light small mb-1">
                  <i class="fas fa-calendar-alt me-1 text-info"></i> Data do Pedido
                </label>
                <input type="date" id="date-filter" class="form-control form-control-sm bg-dark text-white border-secondary">
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="filter-group">
                <label for="search-input" class="form-label text-light small mb-1">
                  <i class="fas fa-search me-1 text-info"></i> Pesquisar por Código ou Descrição
                </label>
                <div class="input-group input-group-sm">
                  <input type="text" id="search-input" class="form-control bg-dark text-white border-secondary" placeholder="Digite para pesquisar...">
                  <button class="btn btn-info" type="button" id="search-button">
                    <i class="fas fa-search me-1"></i> Pesquisar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card-body p-0">
      <% if @items_by_supplier.empty? %>
        <div class="text-center py-5">
          <i class="fas fa-inbox fa-4x text-light mb-3"></i>
          <h5 class="text-white">Nenhum item encontrado</h5>
          <p class="text-light">Todos os itens podem estar marcados como selecionados ou ignorados</p>
        </div>
      <% else %>
        <div class="accordion" id="suppliersAccordion">
          <% @items_by_supplier.each_with_index do |(supplier, items), index| %>
            <% 
              items_count = items.size
              total_value = items.sum { |item| item.valor_unitario * item.quantidade }
              
              zero_stock_count = items.count { |item| item.produto_estoque.to_i == 0 }
              negative_stock_count = items.count { |item| item.produto_estoque.to_i < 0 }
              positive_stock_count = items.count { |item| item.produto_estoque.to_i > 0 }
              
              checked_count = items.count { |item| item.checked_order }
              ignored_count = items.count { |item| item.ignore_order }
              pending_count = items_count - checked_count - ignored_count
            %>
            <div class="accordion-item border-secondary bg-dark supplier-group" data-supplier="<%= supplier %>">
              <h2 class="accordion-header" id="supplierHeading<%= index %>">
                <button class="accordion-button <%= index != 0 ? 'collapsed' : '' %> py-3 bg-dark text-white border-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#supplierCollapse<%= index %>" aria-expanded="<%= index == 0 ? 'true' : 'false' %>" aria-controls="supplierCollapse<%= index %>">
                  <div class="d-flex align-items-center w-100">
                    <div class="flex-grow-1">
                      <div class="d-flex align-items-center">
                        <div class="me-3">
                          <span class="badge bg-info text-dark rounded-pill">
                            <%= items_count %> item(ns)
                          </span>
                        </div>
                        <h5 class="mb-0 text-white"><%= supplier.presence || "Fornecedor não identificado" %></h5>
                      </div>
                    </div>
                    <div class="d-flex align-items-center">
                      <div class="d-none d-md-flex me-3">
                        <span class="badge bg-info me-1" title="Selecionados">
                          <i class="fas fa-check"></i> <%= checked_count %>
                        </span>
                        <span class="badge bg-warning text-dark me-1" title="Ignorados">
                          <i class="fas fa-ban"></i> <%= ignored_count %>
                        </span>
                        <span class="badge bg-secondary me-1" title="Pendentes">
                          <i class="fas fa-question"></i> <%= pending_count %>
                        </span>
                      </div>
                      <div class="text-light small">
                        Total: <%= number_to_currency(total_value, unit: "R$ ") %>
                      </div>
                    </div>
                  </div>
                </button>
              </h2>
              <div id="supplierCollapse<%= index %>" class="accordion-collapse collapse <%= index == 0 ? 'show' : '' %>" aria-labelledby="supplierHeading<%= index %>" data-bs-parent="#suppliersAccordion">
                <div class="accordion-body p-0 bg-dark">
                  <div class="table-responsive">
                    <table class="table table-sm table-hover table-dark mb-0 border-secondary">
                      <thead class="table-dark border-secondary sticky-top">
                        <tr>
                          <th width="8%" class="ps-3">Código</th>
                          <th width="8%">Data</th>
                          <th width="24%">Descrição</th>
                          <th width="7%" class="text-end">Qtd.</th>
                          <th width="7%" class="text-end">Estoque</th>
                          <th width="10%" class="text-end">Unitário</th>
                          <th width="10%" class="text-end">Total</th>
                          <th width="12%">Qtd. Compra</th>
                          <th width="14%" class="text-center">Ações</th>
                        </tr>
                      </thead>
                      <tbody class="border-secondary">
                        <% items.each do |item| %>
                          <% 
                            estoque = item.produto_estoque.to_i
                            
                            if estoque == 0
                              row_class = 'bg-warning text-dark stock-zero'
                              stock_icon = '<i class="fas fa-exclamation-circle me-1" title="Estoque zerado"></i>'
                            elsif estoque < 0
                              row_class = 'bg-danger text-white stock-negative'
                              stock_icon = '<i class="fas fa-exclamation-triangle me-1" title="Estoque negativo"></i>'
                            else
                              row_class = 'bg-success text-white stock-positive'
                              stock_icon = '<i class="fas fa-check-circle me-1" title="Estoque positivo"></i>'
                            end
                            
                            selection_class = if item.checked_order
                                                'selection-checked'
                                              elsif item.ignore_order
                                                'selection-ignored'
                                              else
                                                'selection-pending'
                                              end
                          %>
                          <tr class="<%= row_class %> <%= selection_class %> item-row" 
                              data-product-code="<%= item.produto_codigo %>" 
                              data-product-desc="<%= item.produto_descricao %>"
                              data-stock-status="<%= estoque == 0 ? 'zero' : (estoque < 0 ? 'negative' : 'positive') %>"
                              data-selection-status="<%= item.checked_order ? 'checked' : (item.ignore_order ? 'ignored' : 'pending') %>">
                            <td class="ps-3">
                              <%= raw stock_icon %>
                              <code class="bg-secondary text-white"><%= item.produto_codigo %></code>
                            </td>
                            <td>
                              <%= item.created_at.strftime('%d/%m/%Y') if item.created_at.present? %>
                            </td>
                            <td>
                              <div class="d-flex flex-column">
                                <span><%= item.produto_descricao %></span>
                                <% if item.descricao_detalhada.present? %>
                                  <small class="text-muted"><%= truncate(item.descricao_detalhada, length: 50) %></small>
                                <% end %>
                              </div>
                            </td>
                            <td class="text-end fw-bold"><%= number_with_precision(item.quantidade, precision: 2) %></td>
                            <td class="text-end fw-bold"><%= item.produto_estoque %></td>
                            <td class="text-end"><%= number_to_currency(item.valor_unitario, unit: "R$ ") %></td>
                            <td class="text-end fw-bold"><%= number_to_currency(item.valor_total, unit: "R$ ") %></td>
                            <td>
                              <% if item.sale_order_item_supply.present? %>
                                <div class="input-group input-group-sm">
                                  <%= text_field_tag "quantity_order[#{item.id}]", item.quantity_order, 
                                      class: "form-control form-control-sm quantity-order-input bg-dark text-white border-secondary", 
                                      placeholder: "Qtd.", 
                                      data: { item_id: item.id },
                                      disabled: !item.checked_order %>
                                </div>
                              <% end %>
                            </td>
                            <td>
                              <div class="d-flex flex-column align-items-center">
                                <% if item.sale_order_item_supply.present? %>
                                  <div class="d-flex mb-2">
                                    <div class="form-check form-switch me-2">
                                      <%= check_box_tag "checked_order[#{item.id}]", '1', item.checked_order, 
                                          class: "form-check-input checked-order-toggle", 
                                          data: { item_id: item.id } %>
                                      <label class="form-check-label ms-1 text-white small" for="checked_order[<%= item.id %>]">Incluir</label>
                                    </div>
                                    <div class="form-check form-switch">
                                      <%= check_box_tag "ignore_order[#{item.id}]", '1', item.ignore_order, 
                                          class: "form-check-input ignore-order-toggle", 
                                          data: { item_id: item.id } %>
                                      <label class="form-check-label ms-1 text-white small" for="ignore_order[<%= item.id %>]">Ignorar</label>
                                    </div>
                                  </div>
                                  <button type="button" class="btn btn-sm btn-outline-success save-item-btn d-none" 
                                          data-item-id="<%= item.id %>">
                                    <i class="fas fa-save"></i> Salvar
                                  </button>
                                <% else %>
                                  <div class="input-group input-group-sm mb-2">
                                    <%= text_field_tag "supplier_id[#{item.id}]", nil, 
                                        class: "form-control form-control-sm bg-dark text-white border-secondary", 
                                        placeholder: "ID Fornecedor" %>
                                    <button type="button" class="btn btn-outline-info btn-sm save-supplier-btn" 
                                            data-item-id="<%= item.id %>" 
                                            data-product-id="<%= item.produto_id %>">
                                      <i class="fas fa-save"></i>
                                    </button>
                                  </div>
                                  <span class="badge bg-warning text-dark">Fornecedor não definido</span>
                                <% end %>
                              </div>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

