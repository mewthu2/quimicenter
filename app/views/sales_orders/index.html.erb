  });
  
  function applyFilters() {
    const searchTerm = $('#search-input').val().toLowerCase();
    
    const dateFilter = $('#date-filter').val();
    let dateFilterFormatted = '';
    if (dateFilter) {
      const dateParts = dateFilter.split('-');
      dateFilterFormatted = `${dateParts[2]}/${dateParts[1]}/${dateParts[0]}`;
    }
    
    $('.item-row').hide();
    
    const suppliersWithMatches = new Set();
    
    $('.item-row').each(function() {
      const productCode = $(this).data('product-code').toString().toLowerCase();
      const productDesc = $(this).data('product-desc').toString().toLowerCase();
      const itemDate = $(this).find('td:nth-child(2)').text().trim();
      
      const matchesSearch = !searchTerm || 
                       productCode.includes(searchTerm) || 
                       productDesc.includes(searchTerm);
      const matchesDate = !dateFilterFormatted || itemDate === dateFilterFormatted;
      
      if (matchesSearch && matchesDate) {
        $(this).show();
        
        const supplierGroup = $(this).closest('.supplier-group');
        if (supplierGroup.length) {
          const supplierId = supplierGroup.attr('data-supplier');
          suppliersWithMatches.add(supplierId);
          
          const accordionCollapse = supplierGroup.find('.accordion-collapse');
          if (!accordionCollapse.hasClass('show')) {
            supplierGroup.find('.accordion-button').removeClass('collapsed');
            accordionCollapse.addClass('show');
          }
        }
      }
    });
    
    $('.supplier-group').each(function() {
      const visibleItems = $(this).find('.item-row:visible').length;
      if (visibleItems === 0) {
        $(this).hide();
      } else {
        $(this).show();
      }
    });
    
    setTimeout(() => {
      initStockNavigation();
    }, 100);
  }

  initStockNavigation();

  document.querySelectorAll('.accordion-button').forEach(button => {
    button.addEventListener('click', function() {
      setTimeout(() => {
        initStockNavigation();
      }, 500);
    });
  });
