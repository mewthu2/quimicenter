    // Evento para o botão "Anterior" de estoque suficiente
    document.getElementById('prev-ok-stock').addEventListener('click', function() {
      if (okStockRows.length === 0) return;
      
      // Voltar para o item anterior
      currentOkStockIndex = (currentOkStockIndex - 1 + okStockRows.length) % okStockRows.length;
      
