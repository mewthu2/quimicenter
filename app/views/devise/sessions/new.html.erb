<div class="login min-vh-100 d-flex align-items-center justify-content-center position-relative overflow-hidden">
  <!-- ========== BEGIN BACKGROUND CODE ========== -->
  <div class="main">
    <!-- Periodic table elements -->
    <div class="element element-h">H</div>
    <div class="element element-o">O</div>
    <div class="element element-c">C</div>
    <div class="element element-n">N</div>
    <div class="element element-na">Na</div>
    
    <!-- Molecule structures -->
    <div class="molecule molecule-1"></div>
    <div class="molecule molecule-2"></div>
    <div class="molecule molecule-3"></div>
    
    <!-- Lab equipment -->
    <div class="test-tube test-tube-1">
      <div class="test-tube-liquid"></div>
      <div class="test-tube-bubbles">
        <div class="t-bubble t-bubble-1"></div>
        <div class="t-bubble t-bubble-2"></div>
        <div class="t-bubble t-bubble-3"></div>
      </div>
    </div>
    <div class="test-tube test-tube-2">
      <div class="test-tube-liquid"></div>
      <div class="test-tube-bubbles">
        <div class="t-bubble t-bubble-1"></div>
        <div class="t-bubble t-bubble-2"></div>
        <div class="t-bubble t-bubble-3"></div>
      </div>
    </div>
    
    <div class="flask-large">
      <div class="flask-liquid"></div>
      <div class="flask-bubbles">
        <div class="f-bubble f-bubble-1"></div>
        <div class="f-bubble f-bubble-2"></div>
        <div class="f-bubble f-bubble-3"></div>
        <div class="f-bubble f-bubble-4"></div>
        <div class="f-bubble f-bubble-5"></div>
      </div>
    </div>
    
    <!-- Chemical formulas -->
    <div class="formula formula-1">H₂O</div>
    <div class="formula formula-2">C₆H₁₂O₆</div>
    <div class="formula formula-3">NaOH</div>
    
    <!-- Hexagonal structure (benzene) -->
    <div class="benzene"></div>
  </div>
  <!-- ========== END BACKGROUND CODE ========== -->
  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6 text-center mb-4">
        <!-- Logo image -->
        <div class="logo-container mb-2">
          <%= image_tag "admin/logo-320X118px.webp", alt: "Quimicenter Logo", class: "img-fluid logo-image" %>
        </div>
        <h2 class="company-subtitle">Acompanhamento de pedidos</h2>
      </div>
    </div>
    
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-5">
        <div class="login-card">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mb-3">
              <%= f.label 'Seu e-mail:', class: 'form-label' %><br />
              <div class="input-group">
                <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              </div>
            </div>

            <div class="field mb-3">
              <%= f.label 'Sua senha:', class: 'form-label' %><br />
              <div class="input-group">
                <div class="input-group-text"><i class="fas fa-lock"></i></div>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field mb-3">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: 'form-check-input' %>
                  <%= f.label :remember_me, class: 'form-check-label' %>
                </div>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Logar", class: 'btn btn-primary w-100' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* ========== BEGIN BACKGROUND STYLES ========== */
  body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    overflow-x: hidden;
  }
  
  .login {
    background: linear-gradient(135deg, #0a2342 0%, #112d4e 50%, #1a3c6e 100%);
    min-height: 100vh;
  }
  
  /* Periodic table elements */
  .element {
    position: absolute;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    border-radius: 8px;
    color: white;
    opacity: 0.2;
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
  }
  
  .element-h {
    background-color: #3498db;
    top: 15%;
    left: 10%;
    animation: float 8s infinite ease-in-out;
  }
  
  .element-o {
    background-color: #e74c3c;
    bottom: 20%;
    right: 15%;
    animation: float 9s infinite ease-in-out;
    animation-delay: 1s;
  }
  
  .element-c {
    background-color: #2ecc71;
    top: 25%;
    right: 20%;
    animation: float 10s infinite ease-in-out;
    animation-delay: 2s;
  }
  
  .element-n {
    background-color: #9b59b6;
    bottom: 15%;
    left: 20%;
    animation: float 7s infinite ease-in-out;
    animation-delay: 1.5s;
  }
  
  .element-na {
    background-color: #f39c12;
    top: 60%;
    left: 15%;
    animation: float 8.5s infinite ease-in-out;
    animation-delay: 0.5s;
  }
  
  /* Molecules */
  .molecule {
    position: absolute;
    border-radius: 50%;
  }
  
  .molecule-1 {
    width: 120px;
    height: 120px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    top: 30%;
    left: 5%;
  }
  
  .molecule-1::before,
  .molecule-1::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    background-color: rgba(52, 152, 219, 0.3);
    border-radius: 50%;
  }
  
  .molecule-1::before {
    top: 20px;
    left: 50px;
  }
  
  .molecule-1::after {
    bottom: 20px;
    right: 30px;
  }
  
  .molecule-2 {
    width: 150px;
    height: 150px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    bottom: 10%;
    right: 5%;
  }
  
  .molecule-2::before,
  .molecule-2::after {
    content: '';
    position: absolute;
    width: 25px;
    height: 25px;
    background-color: rgba(231, 76, 60, 0.3);
    border-radius: 50%;
  }
  
  .molecule-2::before {
    top: 30px;
    left: 60px;
  }
  
  .molecule-2::after {
    bottom: 40px;
    right: 20px;
  }
  
  .molecule-3 {
    width: 100px;
    height: 100px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    top: 15%;
    right: 15%;
  }
  
  .molecule-3::before,
  .molecule-3::after {
    content: '';
    position: absolute;
    width: 15px;
    height: 15px;
    background-color: rgba(46, 204, 113, 0.3);
    border-radius: 50%;
  }
  
  .molecule-3::before {
    top: 20px;
    left: 40px;
  }
  
  .molecule-3::after {
    bottom: 25px;
    right: 30px;
  }
  
  /* Test tubes */
  .test-tube {
    position: absolute;
    width: 30px;
    height: 120px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 0 0 15px 15px;
    overflow: hidden;
  }
  
  .test-tube-1 {
    top: 10%;
    left: 30%;
    transform: rotate(15deg);
  }
  
  .test-tube-2 {
    bottom: 20%;
    right: 30%;
    transform: rotate(-10deg);
  }
  
  .test-tube-liquid {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 70%;
    background: linear-gradient(to bottom, rgba(52, 152, 219, 0.3), rgba(41, 128, 185, 0.4));
    border-radius: 0 0 15px 15px;
  }
  
  .test-tube-bubbles {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 70%;
  }
  
  .t-bubble {
    position: absolute;
    background-color: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    animation: bubble-rise 4s infinite ease-in-out;
  }
  
  .t-bubble-1 {
    width: 8px;
    height: 8px;
    left: 10px;
    bottom: 10px;
    animation-delay: 0s;
  }
  
  .t-bubble-2 {
    width: 6px;
    height: 6px;
    left: 18px;
    bottom: 20px;
    animation-delay: 1s;
  }
  
  .t-bubble-3 {
    width: 4px;
    height: 4px;
    left: 8px;
    bottom: 40px;
    animation-delay: 2s;
  }
  
  /* Large flask */
  .flask-large {
    position: absolute;
    width: 100px;
    height: 120px;
    background-color: transparent;
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 0 0 50px 50px;
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
  }
  
  .flask-large::before {
    content: '';
    position: absolute;
    width: 40px;
    height: 30px;
    background-color: transparent;
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-bottom: none;
    border-radius: 10px 10px 0 0;
    top: -32px;
    left: 28px;
  }
  
  .flask-liquid {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(to bottom, rgba(155, 89, 182, 0.3), rgba(142, 68, 173, 0.4));
    border-radius: 0 0 50px 50px;
  }
  
  .flask-bubbles {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
  }
  
  .f-bubble {
    position: absolute;
    background-color: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    animation: bubble-rise 5s infinite ease-in-out;
  }
  
  .f-bubble-1 {
    width: 10px;
    height: 10px;
    left: 20px;
    bottom: 10px;
    animation-delay: 0s;
  }
  
  .f-bubble-2 {
    width: 8px;
    height: 8px;
    left: 40px;
    bottom: 15px;
    animation-delay: 1.5s;
  }
  
  .f-bubble-3 {
    width: 12px;
    height: 12px;
    left: 60px;
    bottom: 5px;
    animation-delay: 0.8s;
  }
  
  .f-bubble-4 {
    width: 6px;
    height: 6px;
    left: 30px;
    bottom: 30px;
    animation-delay: 2.2s;
  }
  
  .f-bubble-5 {
    width: 9px;
    height: 9px;
    left: 50px;
    bottom: 25px;
    animation-delay: 1.2s;
  }
  
  /* Chemical formulas */
  .formula {
    position: absolute;
    font-family: 'Courier New', monospace;
    font-weight: bold;
    color: rgba(255, 255, 255, 0.15);
  }
  
  .formula-1 {
    font-size: 60px;
    top: 40%;
    right: 10%;
  }
  
  .formula-2 {
    font-size: 50px;
    bottom: 30%;
    left: 5%;
  }
  
  .formula-3 {
    font-size: 55px;
    top: 20%;
    left: 40%;
  }
  
  /* Benzene structure */
  .benzene {
    position: absolute;
    width: 100px;
    height: 100px;
    top: 70%;
    right: 15%;
    transform: rotate(30deg);
  }
  
  .benzene::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid rgba(255, 255, 255, 0.1);
    transform: rotate(0deg);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  }
  
  .benzene::after {
    content: '';
    position: absolute;
    width: 60%;
    height: 60%;
    left: 20%;
    top: 20%;
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
  }
  
  /* Animations */
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }
  
  @keyframes bubble-rise {
    0% {
      transform: translateY(0);
      opacity: 0.7;
    }
    100% {
      transform: translateY(-60px);
      opacity: 0;
    }
  }
  /* ========== END BACKGROUND STYLES ========== */
  
  /* Logo styling */
  .logo-container {
    display: flex;
    justify-content: center;
    margin-bottom: 15px;
  }
  
  .logo-image {
    max-width: 320px;
    height: auto;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.3));
  }
  
  /* Company subtitle */
  .company-subtitle {
    color: #4fc3f7;
    font-size: 1.5rem;
    font-weight: 500;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    margin-bottom: 1.5rem;
  }
  
  /* Login card styling */
  .login-card {
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Form styling */
  .form-label {
    color: #ffffff;
  }
  
  .form-check-label {
    color: #ffffff;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #42a5f5 0%, #1976d2 100%);
    border: none;
    box-shadow: 0 4px 15px rgba(25, 118, 210, 0.3);
    transition: all 0.3s ease;
    margin-top: 10px;
  }
  
  .btn-primary:hover {
    background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(25, 118, 210, 0.4);
  }
  
  .input-group-text {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: #ffffff;
  }
  
  .form-control {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: #ffffff;
  }
  
  .form-control:focus {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    color: #ffffff;
    box-shadow: 0 0 0 0.25rem rgba(66, 165, 245, 0.25);
  }
  
  .form-control::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
</style>